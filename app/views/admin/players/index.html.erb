<div class="content-heading">
   Jugadores
   <%= link_to 'Volver', :back, { class: "mb-lg btn btn-default btn-lg pull-right" } %>
</div>
<div class="row">
   <div class="col-sm-12">
      <div class="panel">
         <div class="panel-heading"></div>
         <div class="table-responsive">
            <table class="table table-bordered table-hover">
               <thead>
                  <tr>
                     <th>#</th>
                     <th>DNI</th>
                     <th>Nombre</th>
                     <th>Ciudad</th>
                     <th>Provincia</th>
                     <th>Edad</th>
                     <th></th>
                  </tr>
               </thead>
               <tbody>

                  <% @players.each_with_index do |player, index| %>
                  <tr>
                     <td><%= index+1 %></td>
                     <td><%= player[:dni] %></td>
                     <td><%= player.name %></td>
                     <td><%= player[:city] %></td>
                     <td><%= player[:province] %></td>
                     <td><%= player.age %></td>
                     <td>
                        <%= link_to 'Mostrar', admin_player_path(player), { class: "btn btn-sm bt-primary bg-gray-lighter" } %>
                        <%= link_to '', edit_admin_player_path(player), { class: "btn btn-success btn-sm bg-success-light fa fa-pencil" } %>
                        <%= link_to '', admin_player_path(player), { method: :delete, class: "btn btn-danger btn-sm bg-danger-light fa fa-trash-o" } %>
                        </td>
                  </tr>
                  <% end %>

               </tbody>
            </table>
         </div>
         <%= render partial: 'pagination_footer', locals: { elements: @players } %>  
      </div>
   </div>
</div>