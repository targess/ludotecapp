<div class="col-sm-12">
  <!-- START panel-->
  <div class="panel panel-default">
    <div class="panel-body">

      <%= form_for([:admin, @boardgame], html: {class: "form-horizontal"}) do |f| %>
      <% if @boardgame.errors.any? %>
        <div class="alert bg-danger-light alert-dismissible fade in">
          <button type="button" data-dismiss="alert" aria-label="Close" class="close">
            <span aria-hidden="true">×</span>
          </button>
          <div id="error_explanation">
            <h2><%= pluralize(@boardgame.errors.count, "error") %> prohibited this boardgame from being saved:</h2>

            <ul>
              <% @boardgame.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :nombre, {class: "col-lg-2 control-label"} %>
        <div class="col-lg-10">
          <%= f.text_field :name, {class: "form-control"} %>  
        </div>
      </div>

      <div class="form-group">
        <%= f.label :descripción, {class: "col-lg-2 control-label"} %>
        <div class="col-lg-10">
          <%= f.text_area :description, {class: "form-control"} %>  
        </div>
      </div>
      <div class="form-group">
        <%= f.label :miniatura, {class: "col-lg-2 control-label"} %>
        <div class="col-lg-10">
          <%= f.text_field :thumbnail, {class: "form-control"} %>  
        </div>
      </div>
      <div class="form-group">
        <%= f.label :imagen, {class: "col-lg-2 control-label"} %>
        <div class="col-lg-10">
          <%= f.text_field :image, {class: "form-control"} %>  
        </div>
      </div>
      <div class="form-group">
        <%= f.label :min_jugadores, {class: "col-lg-2 control-label"} %>
        <div class="col-lg-10">
          <%= f.number_field :minplayers, {class: "form-control"} %>  
        </div>
      </div>
      <div class="form-group">
        <%= f.label :max_jugadores, {class: "col-lg-2 control-label"} %>
        <div class="col-lg-10">
          <%= f.number_field :maxplayers, {class: "form-control"} %>  
        </div>
      </div>
      <div class="form-group">
        <%= f.label :duración, {class: "col-lg-2 control-label"} %>
        <div class="col-lg-10">
          <%= f.number_field :playingtime, {class: "form-control"} %>  
        </div>
      </div>
      <div class="form-group">
        <%= f.label :edad_minima, {class: "col-lg-2 control-label"} %>
        <div class="col-lg-10">
          <%= f.number_field :minage, {class: "form-control"} %>  
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-offset-2 col-lg-10">

          <%= f.button "Guardar cambios", {class: "btn btn-lg btn-primary"} %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>