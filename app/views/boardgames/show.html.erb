<div class="content-heading">
	<%= @boardgame.name %>
</div>
<div class="row">
	<div class="col-lg-4">
		<!-- START widget-->
		<div class="panel widget">
			<div class="panel-body">
				<div class="row row-table text-center">
					<div class="col-xs-4">
						<p>Min Players</p>
						<h3 class="m0 text-inherit"><%= @boardgame.minplayers %></h3>
					</div>
					<div class="col-xs-4">
						<p>Max Players</p>
						<h3 class="m0 text-inherit"><%= @boardgame.maxplayers %></h3>
					</div>
					<div class="col-xs-4">
						<p>Playing time</p>
						<h3 class="m0 text-inherit"><%= @boardgame.playingtime %></h3>
					</div>
				</div>
			</div>
			<img src=<%= "http://#{@boardgame.image}" %> alt="" class="img-responsive">
		</div>
		<!-- END widget-->
	</div>
	<div class="col-lg-8">
		<div class="panel widget">
			<div class="panel-body text-center">
				<h3 class="m0">Description</h3>
				<p><%= @boardgame.description.html_safe %></p>
			</div>
		</div>
		<%= link_to 'Volver', :back, { class: "mb-lg btn btn-default btn-lg pull-right" } %>
	</div>
</div>