<!DOCTYPE html>
<html lang="en">

<head>
   <meta charset="utf-8">
   <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
   <title>Ludotecapp</title>

   <!-- =============== APP STYLES ===============-->
   <%= csrf_meta_tags %>

   <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
   <!-- =============== APP SCRIPTS ===============-->
   <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

</head>

<body>
   <div class="wrapper">
      <!-- top navbar-->
      <header class="topnavbar-wrapper">
         <%= render partial: "layouts/partials/topnavbar" %>
      </header>
      <!-- sidebar-->
      <aside class="aside">
         <%= render partial: "layouts/partials/sidebar" %>
      </aside>
      <!-- offsidebar-->
      <aside class="offsidebar hide">
         <%= render partial: "layouts/partials/offsidebar" %>
      </aside>
      <!-- Main section-->
      <section>
         <!-- Page content-->
         <div class="content-wrapper">

            <% if notice.present? %>
            <div class="alert alert-success alert-dismissible fade in">
               <button type="button" data-dismiss="alert" aria-label="Close" class="close">
                  <span aria-hidden="true">×</span>
               </button>
               <%= notice %>
            </div>
            <% end %>
            <% if alert.present? %>
            <div class="alert alert-danger alert-dismissible fade in">
               <button type="button" data-dismiss="alert" aria-label="Close" class="close">
                  <span aria-hidden="true">×</span>
               </button>
               <%= alert %>
            </div>
            <% end %>

            <%= yield %>
         </div>
      </section>
      <!-- Page footer-->
      <footer>
         <%= render partial: "layouts/partials/footer" %>
      </footer>
   </div>
   <!-- loans modal -->
   <%= render partial: "layouts/partials/loans_modal" %>

   <%= yield :body_area %> 

</body>

</html>