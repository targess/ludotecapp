<!-- START panel-->
<div class="panel">
 <div class="panel-heading">
    <a href="#" data-tool="panel-refresh" data-toggle="tooltip" title="Refresh Panel" class="pull-right">
       <em class="fa fa-refresh"></em>
    </a>Resultados</div>
 <!-- START table-responsive-->
 <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
       <thead>
          <tr>
             <th>Juegos de mesa</th>
          </tr>
       </thead>
       <tbody>
	       <% @boardgames.each do |boardgame| %>     	
	          <tr>
	             <td>
	                <div class="media-box">
	                   <a href="#" class="pull-left">
	                      <img src="http://<%= boardgame.thumbnail %>" alt="<%= boardgame.name %>" class="media-box-object img-responsive img-rounded thumb64">
	                   </a>
	                   <div class="media-box-body">
	                      <div class="pull-right btn btn-info btn-sm js-loans-modal" 
                          data-boardgameId="<%= boardgame.id %>" 
                          data-toggle="modal" 
                          data-target="#loansModal">Prestar</div>

	                      <h4 class="media-box-heading"><%= boardgame.name %></h4>
	                      <small class="text-muted">
	                      	Nº de jugadores: <%= players_number(boardgame.minplayers, boardgame.maxplayers) %>
	                      </small>
	                      <p><%= truncate(boardgame.description, length: 200, escape: false) %></p>
	                   </div>
	                </div>
	             </td>
	          </tr>
	       <% end %>
       </tbody>
    </table>
 </div>
